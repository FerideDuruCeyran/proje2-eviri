@model DynamicTableListViewModel
@{
    ViewData["Title"] = "Dinamik Tablolar";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-table me-2"></i>Dinamik Tablolar
        </h1>
        <a href="@Url.Action("Upload", "Home")" class="btn btn-primary">
            <i class="bi bi-cloud-upload me-2"></i>Yeni Excel Yükle
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Tablo
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalTables</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-table fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                İşlenen Tablolar
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ProcessedTables</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Bekleyen Tablolar
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingTables</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Toplam Kayıt
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Tables.Sum(t => t.RowCount)</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-database fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tables List -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Yüklenen Excel Tabloları</h6>
        </div>
        <div class="card-body">
            @if (!Model.Tables.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-table fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">Henüz tablo yüklenmemiş</h5>
                    <p class="text-gray-400">İlk Excel dosyanızı yükleyerek başlayın</p>
                    <a href="@Url.Action("Upload", "Home")" class="btn btn-primary">
                        <i class="bi bi-cloud-upload me-2"></i>Excel Yükle
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tablo Adı</th>
                                <th>Dosya Adı</th>
                                <th>Sütun Sayısı</th>
                                <th>Satır Sayısı</th>
                                <th>Yüklenme Tarihi</th>
                                <th>Yükleyen</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var table in Model.Tables)
                            {
                                <tr>
                                    <td>
                                        <strong>@table.TableName</strong>
                                        @if (!string.IsNullOrEmpty(table.Description))
                                        {
                                            <br><small class="text-muted">@table.Description</small>
                                        }
                                    </td>
                                    <td>@table.FileName</td>
                                    <td>
                                        <span class="badge bg-info">@table.ColumnCount sütun</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@table.RowCount kayıt</span>
                                    </td>
                                    <td>@table.UploadDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@table.UploadedBy</td>
                                    <td>
                                        @if (table.IsProcessed)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>İşlendi
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock me-1"></i>Bekliyor
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Data", "DynamicTable", new { tableName = table.TableName })" 
                                               class="btn btn-sm btn-outline-primary" title="Veriyi Görüntüle">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Details", "DynamicTable", new { id = table.Id })" 
                                               class="btn btn-sm btn-outline-info" title="Detayları Görüntüle">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a href="@Url.Action("Export", "DynamicTable", new { tableName = table.TableName })" 
                                               class="btn btn-sm btn-outline-success" title="Dışa Aktar">
                                                <i class="bi bi-download"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="deleteTable(@table.Id, '@table.TableName')" title="Tabloyu Sil">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Tablo Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bu tabloyu silmek istediğinizden emin misiniz?</p>
                <p><strong>Tablo Adı:</strong> <span id="deleteTableName"></span></p>
                <p class="text-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Bu işlem geri alınamaz ve tüm veri kaybolacaktır!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Evet, Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteTable(tableId, tableName) {
            document.getElementById('deleteTableName').textContent = tableName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "DynamicTable")/' + tableId;
            
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        // Initialize DataTable
        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                order: [[4, 'desc']], // Sort by upload date descending
                pageLength: 25,
                responsive: true
            });
        });
    </script>
}
