{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ExcelUploader;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters-for-jwt-signing",
    "Issuer": "ExcelUploader",
    "Audience": "ExcelUploaderUsers",
    "ExpiryInDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "ExcelUploader.Services.DynamicTableService": "Debug",
      "ExcelUploader.Controllers.HomeController": "Debug"
    }
  },
  "AllowedHosts": "*",
  "FileUpload": {
    "MaxFileSize": 52428800,
    "AllowedExtensions": [".xlsx", ".xls"],
    "UploadPath": "Uploads"
  },
  "PortConfiguration": {
    "DefaultPort": 5001,
    "AutoPortDetection": true
  }
}
